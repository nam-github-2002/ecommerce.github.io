<div class="container my-5">
    <div class="row">
        <div class="col-md-8">
            <!-- Form thanh toán chứa cả thông tin giao hàng và phương thức thanh toán -->
            <form id="checkout-form" class="needs-validation" novalidate>
                <!-- Phần thông tin giao hàng -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Thông tin giao hàng</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Họ và tên</label>
                                <input type="text" class="form-control" id="name" name="name" required 
                                    value="<%= user ? user.name : '' %>">
                                <div class="invalid-feedback">
                                    Vui lòng nhập họ và tên
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required
                                    value="<%= user ? user.email : '' %>">
                                <div class="invalid-feedback">
                                    Vui lòng nhập email hợp lệ
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="address" class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" id="address" name="address" 
                                    value="<%= user.address ? user.address.addr : '' %>" required>
                                <div class="invalid-feedback">
                                    Vui lòng nhập địa chỉ
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="city" class="form-label">Thành phố</label>
                                <input type="text" class="form-control" id="city" 
                                    value="<%= user.address ? user.address.city : '' %>"
                                    name="city" required>
                                <div class="invalid-feedback">
                                    Vui lòng nhập thành phố
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="postalCode" class="form-label">Mã bưu điện</label>
                                <input type="text" class="form-control" id="postalCode" 
                                    value="<%= user.address ? user.address.postalCode : '' %>" name="postalCode" required>
                                <div class="invalid-feedback">
                                    Vui lòng nhập mã bưu điện
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="country" class="form-label">Quốc gia</label>
                                <input type="text" class="form-control" 
                                    value="<%= user.address ? user.address.country : '' %>" id="country" name="country" required>
                                <div class="invalid-feedback">
                                    Vui lòng nhập quốc gia
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="phone" class="form-label">Số điện thoại</label>
                                <input type="tel" class="form-control" id="phone" name="phone" required
                                    value="<%= user.address ? user.address.phone : '' %>">
                                <div class="invalid-feedback">
                                    Vui lòng nhập số điện thoại
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Phần phương thức thanh toán (nằm trong form) -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Phương thức thanh toán</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="paymentMethod" 
                                id="cod" value="COD" checked required>
                            <label class="form-check-label" for="cod">
                                Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" 
                                id="momo" value="MOMO" required>
                            <label class="form-check-label" for="momo">
                                Ví điện tử MoMo
                            </label>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Phần tổng kết đơn hàng -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Đơn hàng của bạn</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush mb-3">
                        <% cartItems.forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="my-0"><%= item.product.name %></h6>
                                <small class="text-muted">
                                    <%= item.quantity %> x <%= item.product.price.toLocaleString() %>₫
                                </small>
                            </div>
                            <span class="text-muted">
                                <%= (item.quantity * item.product.price).toLocaleString() %>₫
                            </span>
                        </li>
                        <% }); %>
                        
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <span>Tạm tính</span>
                            <strong><%= subTotal.toLocaleString() %>₫</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <span>Phí vận chuyển</span>
                            <strong><%= shippingFee.toLocaleString() %>₫</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Tổng cộng</span>
                            <strong class="text-danger fs-5">
                                <%= (subTotal + shippingFee).toLocaleString() %>₫
                            </strong>
                        </li>
                    </ul>

                    <button type="submit" form="checkout-form" class="btn btn-primary btn-lg w-100">
                        Đặt hàng
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>