<header>
    <!-- Top Header -->
    <div class="top-header bg-dark text-white py-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="settings">
                        <a href="#" class="text-white me-3"
                            ><i class="fas fa-language"></i> Tiếng Việt</a
                        >
                        <a href="#" class="text-white me-3"
                            ><i class="fas fa-dollar-sign"></i> VND</a
                        >
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <% if (!user) { %>
                    <a href="/auth/login" class="text-white me-3"
                        ><i class="fas fa-sign-in-alt"></i> Đăng nhập</a
                    >
                    <a href="/auth/register" class="text-white"
                        ><i class="fas fa-user-plus"></i> Đăng ký</a
                    >
                    <% } else { %>
                    <div class="dropdown d-inline-block">
                        <a
                            href="#"
                            class="text-white dropdown-toggle"
                            id="userDropdown"
                            data-bs-toggle="dropdown">
                            <img
                                src="<%= user.avatar.url %>"
                                alt="Avatar"
                                class="rounded-circle"
                                height="30"
                                width="30" />
                            <span class="ms-2"><%= user.name %></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/user/me"
                                    ><i class="fas fa-user me-2"></i>Hồ sơ</a
                                >
                            </li>
                            <li>
                                <a class="dropdown-item" href="/order/getOrder"
                                    ><i class="fas fa-shopping-bag me-2"></i>Đơn
                                    hàng</a
                                >
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item" href="/auth/logout"
                                    ><i class="fas fa-sign-out-alt me-2"></i
                                    >Đăng xuất</a
                                >
                            </li>
                        </ul>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <div class="main-header py-4 bg-white shadow-sm">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <a href="/product" class="text-decoration-none">
                        <h1 class="m-0 text-primary">TechStore</h1>
                    </a>
                </div>
                <div class="col-md-6">
                    <form id="search-form" class="d-flex">
                        <input
                            type="text"
                            name="keyword"
                            id="search-input"
                            class="form-control"
                            placeholder="Tìm kiếm sản phẩm..." />
                        <button
                            type="button"
                            id="search-btn"
                            class="btn btn-primary ms-2">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <div class="col-md-3 text-end" id="theCart">
                    <a
                        href="/cart/checkout"
                        class="btn btn-outline-primary position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <span
                            class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            <span id="cart-count">0</span>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/product">Trang chủ</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a
                            class="nav-link dropdown-toggle"
                            href="#"
                            id="navbarDropdown"
                            role="button"
                            data-bs-toggle="dropdown">
                            Danh mục
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a
                                    class="dropdown-item"
                                    href="/product?category=Điện thoại"
                                    >Điện thoại</a
                                >
                            </li>
                            <li>
                                <a
                                    class="dropdown-item"
                                    href="/product?category=Laptop"
                                    >Laptop</a
                                >
                            </li>
                            <li>
                                <a
                                    class="dropdown-item"
                                    href="/product?category=Tablet"
                                    >Tablet</a
                                >
                            </li>
                            <li>
                                <a
                                    class="dropdown-item"
                                    href="/product?category=Phụ kiện"
                                    >Phụ kiện</a
                                >
                            </li>
                            <li>
                                <a
                                    class="dropdown-item"
                                    href="/product?category=Đồng hồ"
                                    >Đồng hồ</a
                                >
                            </li>
                            <li>
                                <a
                                    class="dropdown-item"
                                    href="/product?category=Thiết bị âm thanh"
                                    >Thiết bị âm thanh</a
                                >
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Khuyến mãi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Liên hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
