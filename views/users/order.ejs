<div class="container"></div>
    <% if (orders.length === 0) { %>
        <div class="alert alert-info text-center">
            <i class="bi bi-cart-x"></i> Bạn chưa có đơn hàng nào
        </div>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Sản phẩm</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td>#<%= order._id.toString().slice(-6).toUpperCase() %></td>
                            <td><%= order.createdAt.toLocaleDateString('vi-VN') %></td>
                            <td  style="min-height: 100px;">
                                <% order.orderItems.slice(0, 2).forEach(item => { %>
                                    <div><%= item.name %></div>
                                <% }) %>
                                <% if (order.orderItems.length > 2) { %>
                                    <div>+<%= order.orderItems.length - 2 %> sản phẩm khác</div>
                                <% } %>
                            </td>
                            <td><%= order.totalPrice.toLocaleString('vi-VN') %>₫</td>
                            <td>
                                <span class="badge 
                                    <%= order.isCancelled ? 'bg-danger' : 
                                       order.isPaid && order.isDelivered ? 'bg-success' : 
                                       order.isPaid ? 'bg-primary' : 'bg-warning text-dark' %>">
                                    <%= order.isCancelled ? 'Đã hủy' : 
                                       order.isPaid && order.isDelivered ? 'Đã giao' : 
                                       order.isPaid ? 'Đã thanh toán' : 'Chờ xử lý' %>
                                </span>
                            </td>
                            <td>
                                <a href="/order/getOrder/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>